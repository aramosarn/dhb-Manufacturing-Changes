                    <h3 t-if="o.dhb_raw_material_ids">Productos Finales</h3>

                    <table class="table table-condensed" t-if="o.dhb_final_prod_ids">
                        <thead>
                            <tr>
                                <th><strong>Product</strong></th>
                                <th class="text-right"><strong>Qty to Produce</strong></th>
                            </tr>
                        </thead>
                        <tbody>

                            <t t-if="o.dhb_final_prod_ids">
                                <tr>
                                    <td colspan="4"><strong>Products to Produce</strong></td>
                                </tr>
                                <tr t-foreach="o.dhb_final_prod_ids" t-as="line">
